<p style="color: green"><%= notice %></p>

<h1>People</h1>

<div id="people">
  <% @people.each do |person| %>
    <%= render person %>
    <p>
      <%= link_to "Show this person", person %>
    </p>
    <p>
      <%= button_to "Delete", person, method: :delete, form: { data: { 'turbo-confirm': 'Are you sure?' } } %>
    </p>
  <% end %>
</div>

<%= link_to "New person", new_person_path %>
